default: &default
  address: email-smtp.us-east-1.amazonaws.com
  port: 587
  domain: lentalert.com
  authentication: plain
  enable_starttls_auto: true

<% @smtp.each do |environment, settings| %>

<%= environment %>:
  <<: *default
  user_name: <%= settings['user_name'] %>
  password: <%= settings['password'] %>

<% end %>